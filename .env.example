# DevBr - Configurações de Ambiente
# Desenvolvido por: Ramel Tecnologia - Rafa Martins
# Site: ramelseg.com.br

# ==============================================
# CONFIGURAÇÕES BÁSICAS
# ==============================================

# Ambiente de execução (development, production)
NODE_ENV=development

# Porta da aplicação
PORT=3000

# Domínio da aplicação
VITE_APP_DOMAIN=localhost

# ==============================================
# CONVEX (OBRIGATÓRIO)
# ==============================================

# URL do seu projeto Convex
VITE_CONVEX_URL=https://seu-projeto.convex.cloud

# Nome do deployment
CONVEX_DEPLOYMENT=seu-deployment

# Client ID OAuth do Convex
CONVEX_OAUTH_CLIENT_ID=seu-client-id

# ==============================================
# WORKOS (AUTENTICAÇÃO)
# ==============================================

# Client ID do WorkOS
VITE_WORKOS_CLIENT_ID=seu-workos-client-id

# URI de redirecionamento
WORKOS_REDIRECT_URI=http://localhost:3000/auth/callback

# Hostname da API do WorkOS
VITE_WORKOS_API_HOSTNAME=api.workos.com

# ==============================================
# BANCO DE DADOS (OPCIONAL)
# ==============================================

# URL do PostgreSQL
DATABASE_URL=postgresql://devbr:devbr123@localhost:5432/devbr

# Configurações do PostgreSQL
POSTGRES_DB=devbr
POSTGRES_USER=devbr
POSTGRES_PASSWORD=devbr123

# ==============================================
# REDIS (OPCIONAL)
# ==============================================

# URL do Redis
REDIS_URL=redis://localhost:6379

# Senha do Redis
REDIS_PASSWORD=devbr123

# ==============================================
# OPENAI (OPCIONAL)
# ==============================================

# Chave da API OpenAI
OPENAI_API_KEY=sk-sua-chave-aqui

# Modelo padrão
OPENAI_MODEL=gpt-4

# ==============================================
# ANALYTICS (OPCIONAL)
# ==============================================

# PostHog
VITE_POSTHOG_KEY=sua-chave-posthog
VITE_POSTHOG_HOST=https://app.posthog.com

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ==============================================
# SENTRY (MONITORAMENTO)
# ==============================================

# DSN do Sentry
SENTRY_DSN=https://sua-chave@sentry.io/projeto

# Ambiente do Sentry
SENTRY_ENVIRONMENT=development

# ==============================================
# EMAIL (OPCIONAL)
# ==============================================

# Configurações SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app

# Email remetente
FROM_EMAIL=noreply@seu-dominio.com.br
FROM_NAME=DevBr

# ==============================================
# STORAGE (OPCIONAL)
# ==============================================

# AWS S3
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=seu-bucket

# ==============================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==============================================

# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Ativar debug
DEBUG=false

# Hot reload
HOT_RELOAD=true

# ==============================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ==============================================

# Domínio de produção
PRODUCTION_DOMAIN=seu-dominio.com.br

# SSL/HTTPS
SSL_ENABLED=true

# Certificados SSL
SSL_CERT_PATH=/etc/ssl/certs/seu-dominio.crt
SSL_KEY_PATH=/etc/ssl/private/seu-dominio.key

# ==============================================
# DOCKER
# ==============================================

# Nome do container
CONTAINER_NAME=devbr-app

# Rede Docker
DOCKER_NETWORK=devbr-network

# Réplicas (para Swarm)
REPLICAS=2

# ==============================================
# BACKUP
# ==============================================

# Diretório de backup
BACKUP_DIR=/var/backups/devbr

# Retenção de backups (dias)
BACKUP_RETENTION=30

# ==============================================
# RATE LIMITING
# ==============================================

# Limite de requisições por minuto
RATE_LIMIT_RPM=100

# Janela de tempo (minutos)
RATE_LIMIT_WINDOW=1

# ==============================================
# CORS
# ==============================================

# Origens permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,https://seu-dominio.com.br

# ==============================================
# WEBHOOK
# ==============================================

# Secret para webhooks
WEBHOOK_SECRET=seu-secret-webhook

# URL de callback
WEBHOOK_URL=https://seu-dominio.com.br/api/webhook